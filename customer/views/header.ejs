        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link <%= title === 'Home' ? 'active' : '' %>" href="/customer/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= title === 'Sports' ? 'active' : '' %>" href="/customer/sports">Sports</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= title === 'About' ? 'active' : '' %>" href="/customer/about">About Us</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= title === 'Contact' ? 'active' : '' %>" href="/customer/contact">Contact Us</a>
